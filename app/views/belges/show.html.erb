
<h1><%= @belge.first_name %> <%= @belge.last_name %></h1>
<div class="belge-img">
  <% if @belge.photo? %>
    <%= cl_image_tag @belge.photo.path, width: 200, height: 200, crop: :fill, :radius=>10 %>
  <% end %>
</div>
 <p>
  <%= @belge.description %>
</p>
<p>
  <%= @belge.price %> Francs Belge
</p>

<% @belge.categories.each do |category| %>
  <%= category.name %>
<% end %>

<div>
<%= link_to "All Belgians", belges_path,  class: "btn btn-primary" %>
<%= link_to "Add review", new_belge_review_path(@belge),  class: "btn btn-primary" %>
</div>

<p>All Reviews :</p>

<% @belge.reviews.each do |review| %>
  <p><%= review.title %></p>
  <p><%= review.description %></p>
  <p><%= review.rating %></p>
  <% end %>



