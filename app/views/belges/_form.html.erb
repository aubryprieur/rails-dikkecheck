<%= simple_form_for @belge do |f| %>
  <br>
  <h2 class="text-center">Cr√©er un belge</h2>
  <br>
  <br>
  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.input :first_name, class: 'form-control'%>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.input :last_name, class: 'form-control'%>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.input :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.input :address, class: 'form-control', input_html: { id: 'inlineFormInput', name: 'city' } %>
  </div>
  <div class="form-group">
    <%= f.input :price, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.association :belge_categories, collection: Category.all, as: :check_boxes, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.input :photo, as: :attachinary %>
  </div>
  <br>
  <div class="form-group">
    <%= f.button :submit, class: "btn btn-danger form-control", value: "Enregistrer" %>
  </div>
  <div class="form-group">
    <%= link_to 'Annuler', belges_path, class: "btn btn-default form-control" %>
  </div>
<% end %>
