<%= simple_form_for @belge do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.association :belge_categories, collection: Category.all, as: :check_boxes %>
  <%= f.input :photo, as: :attachinary %>
  <%= f.button :submit %>
<% end %>
