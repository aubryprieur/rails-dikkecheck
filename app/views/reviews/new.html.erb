<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <br>
      <br>
      <h2 class="text-center">Add a review</h2>
      <br>
      <br>
      <%= simple_form_for [@belge, @review] do |f| %>
        <div class="form-group">
          <%= f.input :title %>
        </div>
        <div class="form-group">
          <%= f.input :description %>
        </div>
        <div class="form-group">
          <%= f.input :rating, collection: (1..5).to_a %>
        </div>
        <br>
        <div class="form-group">
          <%= f.button :submit, "Save", class: 'btn btn-danger form-control' %>
        </div>
        <br>
      <% end %>
    </div>
  </div>
</div>
