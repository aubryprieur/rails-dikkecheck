<div class="container">
  <br>
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
      <h3 class="text-center">My bookings - <%= current_user.first_name %> <%= current_user.last_name %></h3>
      <br>
      <div class="col-xs-12 col-sm-12 col-md-12">
        <h3>My request</h3>
        <br>
        <% @bookings.each do |booking| %>
          <div class="message">
            <%= cl_image_tag booking.belge.photo.path, width: 50, height: 50, crop: :fill, radius: 100%>
            <div class="message-name text-center">
              <p><%= booking.start_date %> - <%= booking.end_date %></p>
            </div>
            <div class="message-body">
              <h4><%= booking.belge.first_name %> <%= booking.belge.last_name %></h4>
            </div>
            <div class="message-status">
              <p><%= booking.status %></p>
                <% if booking.status == "Demande acceptÃ©e" %>
                <%= link_to "Add review", new_belge_review_path(booking.belge),  class: "btn btn-danger btn-review" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>


